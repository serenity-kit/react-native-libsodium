# Only support the New Architecture for the example app.
ENV['RCT_NEW_ARCH_ENABLED'] = '1'

# Resolve react_native_pods.rb with a simple path fallback (example -> repo root).
react_native_pods_path = File.expand_path('../node_modules/react-native/scripts/react_native_pods.rb', __dir__)
react_native_pods_fallback = File.expand_path('../../node_modules/react-native/scripts/react_native_pods.rb', __dir__)
require File.exist?(react_native_pods_path) ? react_native_pods_path : react_native_pods_fallback


platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'LibsodiumExample' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Xcode 26 / libc++ removes std::unary_function in C++17; boost 1.76 still references it.
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        macro = '_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_BINARY_FUNCTION'
        define_flag = "-D#{macro}"

        cpp_flags = config.build_settings['OTHER_CPLUSPLUSFLAGS']
        cpp_flags = [cpp_flags] if cpp_flags.is_a?(String)
        cpp_flags = ['$(inherited)'] if cpp_flags.nil?
        cpp_flags << define_flag unless cpp_flags.include?(define_flag)
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = cpp_flags

        c_flags = config.build_settings['OTHER_CFLAGS']
        c_flags = [c_flags] if c_flags.is_a?(String)
        c_flags = ['$(inherited)'] if c_flags.nil?
        c_flags << define_flag unless c_flags.include?(define_flag)
        config.build_settings['OTHER_CFLAGS'] = c_flags

        defs = config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
        defs = [defs] if defs.is_a?(String)
        defs = ['$(inherited)'] if defs.nil?
        defs << macro unless defs.include?(macro)
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = defs
      end
    end
  end
end
